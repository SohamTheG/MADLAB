<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"> <!-- This makes them stack vertically -->

    <!-- First row of strips -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:background="#FF0000" /> <!-- Red Strip -->

        <View
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:background="#00FF00" /> <!-- Green Strip -->

        <View
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:background="#0000FF" /> <!-- Blue Strip -->

        <View
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:background="#FFFF00" /> <!-- Yellow Strip -->
    </LinearLayout>

    <!-- Second row with TextViews (Row 1, Row 2, Row 3, Row 4) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Row 1"
        android:textSize="18sp"
        android:padding="16dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Row 2"
        android:textSize="18sp"
        android:padding="16dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Row 3"
        android:textSize="18sp"
        android:padding="16dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Row 4"
        android:textSize="18sp"
        android:padding="16dp"
        android:gravity="center"/>

</LinearLayout>
